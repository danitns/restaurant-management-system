@model IEnumerable<Restaurant.BusinessLogic.Implementation.Restaurants.ViewRestaurantModel>

@{
    ViewData["Title"] = "Restaurants";
}

<h1 class="text-center">Restaurants</h1>

<div>
    <a class="btn btn-outline-dark" asp-action="Create" asp-controller="Restaurant">Create restaurant</a>
</div>

@if (Model.Count() > 0)
{
    <div class="container">
        <div class="row">
            @foreach (var restaurant in Model)
            {
                <div class="col-4">
                    <img class="card-img-top-container" src="data:image/png;base64,@Convert.ToBase64String(restaurant.Picture)" alt="" />
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                        <p class="card-text">@restaurant.CityName</p>
                        <p class="card-text">@restaurant.Address</p>
                        <a asp-action="Details" asp-route-id="@restaurant.Id">Details</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div>
        <h3>There are no restaurants to display.</h3>
    </div>
}

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home Page</a>
</div>

